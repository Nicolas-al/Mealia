{{ form_start(form) }}
    <div class="form-row">
        <div class="col-md-6">
            {{ form_row(form.name, {'label' : 'Nom du produit'}) }}
        </div>
    </div>
    <div class="form-row">
        <div class="col-md-3">   
            {{ form_row(form.image.oneFile, {'label': 'Image 1'}) }}
        </div>
        <div class="col-md-3">  
            {{ form_row(form.image.twoFile, {'label': 'Image 2'}) }}
        </div>
        <div class="col-md-3">  
            {{ form_row(form.image.threeFile, {'label': 'Image 3'}) }}
        </div>
        <div class="col-md-3">  
            {{ form_row(form.image.fourFile, {'label': 'Image 4'}) }}
        </div>
    </div>
    <div class="form-row mb-3">
        <div class="col-md-4">
            {{ form_row(form.price.TTC, {'label': 'Prix TTC'}) }}
        </div>
        <div class="col-md-4">
            {{ form_row(form.price.TVA, {'label': 'TVA'}) }}
        </div>
        <div class="col-md-4">
