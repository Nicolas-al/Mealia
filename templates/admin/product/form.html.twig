        </div>
    </div>
    <div class="form-row">
        <div class="col-md-12">
            {{ form_row(form.collection.name, {'label': 'Collection'}) }}
        </div>
    </div>
    <div class="form-row">
        <div class="col-md-12">
            {{ form_row(form.description) }}
        </div> 
    </div>
    <div class="form-row">
        <div class="col-md-6">
            {{ form_row(form.addInformation.dimension, {'label': 'Dimensions'}) }}
        </div>
        <div class="col-md-6">
            {{ form_row(form.addInformation.tissue, {'label': 'Tissue'}) }}
        </div>
    </div>
    {{ form_widget(form) }}
