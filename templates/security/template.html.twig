<div class="text-center" id="registration_block_info">
    <div class="row pt-3 d-flex flex-column">
        <h3 class="font-weight-light mb-4">Nouveau client</h3>
        <p class="mb-4">Créez votre compte en quelques secondes.</p>
        <a class="btn mt-1" id="btn_new_client" href="{{path('registration')}}">S'inscrire avec un mail</a>
    </div>
</div>
<div class="" id="login_block">
    <div class="container"  id="login_container">
        <div class="row d-flex pt-3 flex-column text-center">
            <h3 class="font-weight-normal mb-4">Déjà client ?</h3>
            <p class="mb-0 font-size">Connectez-vous</p>
        </div>
        <div class="row justify-content-center">
            <form action="{{ path('app_login')}}" method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        Vous êtes connecté en tant que {{ app.user.username }}, <a href="{{ path('app_logout') }}">deconnexion</a>
                    </div>
                {% endif %}
                <div class="form-group mb-1">
                    <label for="inputEmail">Email</label>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control input-visible" required autofocus>
                </div>
                <div class="form-group mb-0">
                    <label for="inputPassword">Mot de Passe</label>
                    <input type="password" name="password" id="inputPassword" class="form-control input-visible" required>
                </div>
                <div class="form-group mb-0">
                    <input type="hidden" name="_csrf_token"
                    value="{{ csrf_token('authenticate') }}"
                    >
                    <input type="hidden" name="_target_path" id="login_redirect" value="{{ path('main') }}"/>
                </div>

                {#
                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                    See https://symfony.com/doc/current/security/remember_me.html

                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" name="_remember_me"> Remember me
                        </label>
                    </div>
                #}
                <div class="form-group form-group d-flex justify-content-end">
                    <a class="text-white" id="mdp_forbidden" href="{{ path('app_forgotten_password') }}">Mot de passe oublié</a>
                </div>
                <div class="form-group d-flex justify-content-end">
                    <button class="btn m-auto" id="btn_login" type="submit">
                        Se connecter
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
